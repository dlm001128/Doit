<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_marginTop="280dp"
    android:layout_height="450dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:background="@drawable/fragment_menu_round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView_addTask"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Add Task"
                android:textSize="8pt"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_addTask"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textSize="8pt"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <EditText
                android:id="@+id/editTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter your task here" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_calendar_month_24"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Deadline"
                android:layout_marginTop="1dp"
                android:textSize="8pt"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textView_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:layout_marginTop="1dp"
                android:textSize="8pt"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_folder_open_24"/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-19dp"
                android:text="Project"
                android:textSize="8pt"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/spinner_project"
                android:layout_width="5dp"
                android:layout_marginTop="-19dp"
                android:layout_height="wrap_content"
                android:entries="@array/project"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_check_circle_outline_24"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Finish Task"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_visibility_off_24" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hide Task"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_weight="1"/>

            <Switch
                android:id="@+id/hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_outline_24" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Delete Task"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>